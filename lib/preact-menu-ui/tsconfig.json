{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "declaration": true,
    "declarationDir": "dist",

    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["index.tsx", "components"]
}
